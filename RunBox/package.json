{
  "name": "runbox",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "dev:web": "pnpm --filter @runbox/web dev",
    "build:web": "pnpm --filter @runbox/web build",
    "lint:web": "pnpm --filter @runbox/web lint",
    "dev:api": "uvicorn apps.api.src.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:runner": "python -m services.runner.src.worker",
    "format": "pnpm lint:web && ruff format apps/api/src"
  },
  "pnpm": {
    "packageExtensions": {
      "eslint-config-next@*": {
        "dependencies": {
          "typescript": "^5.3.0"
        }
      }
    }
  },
  "workspaces": [
    "apps/web"
  ]
}

